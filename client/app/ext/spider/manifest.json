{
  "manifest_version" :2,
  "name": "Site Spider, Mark II",
  "version": "1.0.1",
  "description": "Update of 'Site Spider' to manifest 2",
  "background": {
      "page":"background.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_title": "Spider a website",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}